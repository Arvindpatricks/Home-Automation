<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_home"
    tools:context="com.craftydesigners.arvind.homeautomation.Home">


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fan"
        android:textSize="30dp"
        android:id="@+id/fan"
        android:layout_marginTop="92dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/light"
        android:checked="false"
        android:layout_alignEnd="@+id/light" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light"
        android:textSize="30dp"

        android:id="@+id/light"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/fan"
        android:checked="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cooker"
        android:textSize="30dp"

        android:id="@+id/cooker"
        android:layout_below="@+id/light"
        android:layout_alignEnd="@+id/light"
        android:layout_marginTop="38dp"
        android:checked="false"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mixie"
        android:textSize="30dp"

        android:id="@+id/mixie"
        android:layout_below="@+id/cooker"
        android:layout_alignEnd="@+id/cooker"
        android:layout_marginTop="48dp"
        android:checked="false"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Automation"
        android:textAlignment="center"
        android:textSize="35dp"

        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send SMS"
        android:id="@+id/button2"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/mixie"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
